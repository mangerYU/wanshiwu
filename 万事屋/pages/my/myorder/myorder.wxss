page{
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #F7F7F7;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}
.navbar .item.active{
  color: #FF5A60;
font-size: 30rpx;

}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  width: 87rpx;
  margin-left: 36rpx;
  background: #FF5A60;

}

.order{
  width: 100%;
  height: 500rpx;
  margin-top: 24rpx;
  background-color: white;
}
.order-state{
  height:60rpx;
  width:720rpx;
color: #FFC003;
font-size: 24rpx;
display: flex;
flex-direction: row-reverse;
align-items: center;
}
.order-comm{
  height: 200rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
}
.img{
  width: 180rpx;
display: flex;
align-items: center;
justify-content: center;

}
.order-text{
width: 320rpx;
height: 180rpx;
font-size: 24rpx;
display: flex;
flex-direction: column;
color: #333333;
}
.order-price{
  height: 180rpx;
  width: 100rpx;
  font-size: 24rpx;
  display: flex;
flex-direction: column;
}
.order-foot{
height: 240rpx;
 
}
.order-foot .states{
  height: 80rpx;
 display: flex;
justify-content: flex-end;
align-items: center;
}
.font{
  color:#333333;
  font-size:24rpx;
}
.circle{
  width: 146rpx;
  height: 58rpx;
  border: 1rpx solid #999999;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.qr{
  border: 1rpx solid #FFC003;
  color: #FFC003;
}
.inter{
  margin-right: 30rpx;
}
.hide{
 display: none;
}
.show{ 
 display: block;
}